@model IEnumerable<SBSCLearn.Models.Courses>
@{
    ViewData["Title"] = "Learn";
}

<h2>Learn</h2>
<table class="table table-bordered table-sm table-striped">
	<thead>
		<tr>
			
			<th>Course Name</th>
			<th>Category</th>
			<th>Description</th>
			<th>Attempt</th>
			
		</tr>
	</thead>
	<tbody>
		@if (Model == null)
		{
			<tr><td colspan="7" class="text-center">Not created a course yet</td></tr>
		}
		else
		{
			@foreach (var p in Model)
			{
				<tr>
					<td>@p.CourseName</td>
					<td>@p.Category</td>
					<td>@p.Description</td>=
					<td><a asp-controller="ConfigSettings" asp-action="Update" asp-route-id="@p.CourseId">Update</a></td>
				</tr>
			}
		}
	</tbody>
</table>
