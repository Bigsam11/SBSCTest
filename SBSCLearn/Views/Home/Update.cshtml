@model SBSCLearn.Models.Attempt
@{
	ViewData["Title"] = "Update";
}

<h2>Update</h2>

<h2>Update</h2>
<div class="row">
	<div class="col-sm-9 col-md-7  pt-5 col-lg-5 mx-auto">
		<div class="card card-signin my-5">

			<div class="card-body pt-5">
				<p>@TempData["response"]</p>
				<p style="font-size:25px" class="card-title text-center">Score course</p>
				<form method="post" asp-controller="Home" asp-action="Update">
					<div class="form-label-group pb-4">
						<div class="col-md-12">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="form-group">
								<input asp-for="Score" class="form-control" placeholder="Score" />
								<span asp-validation-for="Score" class="text-danger"></span>
							</div>
							
						</div>
						<button class="btn btn-lg btn-primary btn-block" type="submit" value="Update">Update</button>
					</div>
				</form>
				<a class="nav-link" href="@Url.Action("Index", "Home")">Back to home</a>
			</div>
		</div>
	</div>

</div>

